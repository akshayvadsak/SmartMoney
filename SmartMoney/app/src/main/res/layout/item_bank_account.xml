<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_gravity="center"
            android:layout_marginLeft="5sp"
            android:padding="2sp"
            android:src="@drawable/ic_account_balance" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="14sp"
            android:layout_marginRight="5sp"
            android:layout_weight="0.1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvBankAdapter_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1sp"
                android:layout_marginBottom="1sp"
                android:text="Bank Name"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvBankAdapter_balance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1sp"
                android:text="00"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvBankAdapter_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1sp"
                android:text="Account no"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tvBankAdapter_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1sp"
                android:text="Account type"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="5sp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgAccount_edit"
                android:layout_width="22sp"
                android:layout_height="22sp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="3sp"
                android:gravity="center"
                android:padding="2sp"
                android:src="@drawable/ic_edit_pencil" />

            <ImageView
                android:id="@+id/imgAccount_delete"
                android:layout_width="22sp"
                android:layout_height="22sp"
                android:layout_marginTop="3sp"
                android:layout_marginRight="3dp"
                android:gravity="center"
                android:padding="2sp"
                android:src="@drawable/ic_rubbish_bin" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:layout_alignParentBottom="true"
        android:background="#d2d2d2" />
</RelativeLayout>
