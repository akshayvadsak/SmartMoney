<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<!--    <ImageView-->
<!--        android:id="@+id/logo_app"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="45sp"-->
<!--        android:layout_marginTop="15sp"-->
<!--        android:layout_marginBottom="5sp"-->
<!--        android:scaleType="fitCenter"-->
<!--        android:src="@drawable/logo" />-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo_app"
        android:layout_marginBottom="?attr/actionBarSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3sp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="3sp"
                android:orientation="horizontal"
                android:padding="3sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cash Details"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5sp"
                    android:background="#d2d2d2" />
            </LinearLayout>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edtUserDetails_cashAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="7sp"
                android:hint="Initial Cash Amount "
                android:inputType="numberDecimal"
                android:padding="2sp"
                android:textSize="17sp"
                app:met_hideUnderline="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="3sp"
                android:orientation="horizontal"
                android:padding="3sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Account Details"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5sp"
                    android:background="#d2d2d2" />
            </LinearLayout>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edtUserDetails_bankName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="7sp"
                android:hint="Bank Name "
                android:padding="2sp"
                android:textSize="17sp"
                app:met_hideUnderline="true" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edtUserDetails_accountNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="7sp"
                android:hint="Account Number"
                android:inputType="number"
                android:padding="2sp"
                android:textSize="17sp"
                app:met_hideUnderline="true" />

            <Spinner
                android:id="@+id/spinUserDetails_accountType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2sp"
                android:layout_marginBottom="2sp" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edtUserDetails_initialBalance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="7sp"
                android:hint="Initial Balance "
                android:inputType="numberDecimal"
                android:padding="2sp"
                android:textSize="17sp"
                app:met_hideUnderline="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="3sp"
                android:orientation="horizontal"
                android:padding="3sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="E-wallet Details"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5sp"
                    android:background="#d2d2d2" />
            </LinearLayout>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edtUserDetails_walletName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="7sp"
                android:hint="E-wallet Name "
                android:padding="2sp"
                android:textSize="17sp"
                app:met_hideUnderline="true" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edtUserDetails_walletBalance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="7sp"
                android:hint="Initial Balance"
                android:inputType="numberDecimal"
                android:padding="2sp"
                android:textSize="17sp"
                app:met_hideUnderline="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="3sp"
                android:orientation="horizontal"
                android:padding="3sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Credit Card Details"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5sp"
                    android:background="#d2d2d2" />
            </LinearLayout>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edtUserDetails_cardName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="7sp"
                android:hint="Credit Card Name "
                android:padding="2sp"
                android:textSize="17sp"
                app:met_hideUnderline="true" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edtUserDetails_cardNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="7sp"
                android:hint="Last 4 Digit Number Of Your Card"
                android:inputType="number"
                android:maxLength="4"
                android:padding="2sp"
                android:textSize="17sp"
                app:met_hideUnderline="true" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edtUserDetails_cardBalance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="7sp"
                android:hint="Initial Balance"
                android:inputType="numberDecimal"
                android:padding="2sp"
                android:textSize="17sp"
                app:met_hideUnderline="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="3sp"
                android:orientation="horizontal"
                android:padding="3sp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Debit Card Details"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5sp"
                    android:background="#d2d2d2" />
            </LinearLayout>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edtUserDetails_debitCardName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="7sp"
                android:hint="Debit Card Name "
                android:padding="2sp"
                android:textSize="17sp"
                android:visibility="gone"
                app:met_hideUnderline="true" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edtUserDetails_debitCardNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="7sp"
                android:hint="Last 4 Digit Number Of Your Card"
                android:inputType="number"
                android:maxLength="4"
                android:padding="2sp"
                android:textSize="17sp"
                android:visibility="gone"
                app:met_hideUnderline="true" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edtUserDetails_debitCardBalance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="7sp"
                android:hint="Initial Balance"
                android:inputType="numberDecimal"
                android:padding="2sp"
                android:textSize="17sp"
                android:visibility="gone"
                app:met_hideUnderline="true" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnUserDetails_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:text="Submit"
        android:textColor="#ffffff" />
</RelativeLayout>
