<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/logo_app"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_below="@+id/toolbar_notification"
        android:layout_marginTop="15sp"
        android:layout_marginBottom="5sp"
        android:scaleType="fitCenter"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo_app"
        android:layout_margin="5sp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:paddingLeft="15sp"
            android:paddingRight="5sp"
            app:cardCornerRadius="5sp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3sp"
            android:paddingLeft="15sp"
            android:paddingRight="5sp">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edtIncome_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Amount"
                android:inputType="numberDecimal"
                android:padding="2sp"
                android:textSize="16sp"
                app:met_hideUnderline="true" />
        </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:paddingLeft="15sp"
            android:paddingRight="5sp"
            app:cardCornerRadius="5sp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45sp"
            android:layout_margin="3sp"
            android:paddingLeft="15sp"
            android:paddingRight="5sp">

            <TextView
                android:id="@+id/tvIncome_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="2sp"
                android:hint="dd/mm/yyyy"
                android:inputType="date"
                android:textColor="#000000"
                android:textSize="16sp" />
        </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:paddingLeft="15sp"
            android:paddingRight="5sp"
            app:cardCornerRadius="5sp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3sp"
            android:padding="7sp">

            <Spinner
                android:id="@+id/spinIncome_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:paddingLeft="15sp"
            android:paddingRight="5sp"
            app:cardCornerRadius="5sp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3sp"
            android:padding="7sp">

            <Spinner
                android:id="@+id/spinIncome_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:paddingLeft="15sp"
            android:paddingRight="5sp"
            app:cardCornerRadius="5sp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3sp"
            android:paddingLeft="15sp"
            android:paddingRight="5sp">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edtIncome_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Comment"
                android:inputType="textMultiLine"
                android:padding="2sp"
                android:textSize="16sp"
                app:met_hideUnderline="true" />
        </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
        <Button
            android:id="@+id/btnIncome_add"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/button_sub"
            android:text="Add"
            android:layout_marginBottom="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="#ffffff" />



</RelativeLayout>
