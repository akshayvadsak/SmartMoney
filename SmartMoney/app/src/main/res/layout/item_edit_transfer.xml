<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3sp"
            android:background="@drawable/background_linear"
            android:paddingLeft="13sp"
            android:paddingRight="5sp">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edtTransaction_editAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Amount"
                android:inputType="numberDecimal"
                android:textSize="15sp"
                app:met_hideUnderline="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_margin="3sp"
            android:background="@drawable/background_linear"
            android:paddingLeft="5sp"
            android:paddingRight="5sp">

            <TextView
                android:id="@+id/tvTransaction_editDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5sp"
                android:hint="dd/mm/yyyy"
                android:inputType="date"
                android:textColor="#000000"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3sp"
            android:background="@drawable/background_linear"
            android:orientation="horizontal"
            android:padding="7sp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.6"
                android:paddingLeft="7sp"
                android:text="From Account"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvTransaction_editFromAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:paddingLeft="5sp"
                android:textColor="#000000"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3sp"
            android:background="@drawable/background_linear"
            android:orientation="horizontal"
            android:padding="7sp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.6"
                android:paddingLeft="7sp"
                android:text="To Account"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvTransaction_editToAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:paddingLeft="5sp"
                android:textColor="#000000"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3sp"
            android:background="@drawable/background_linear"
            android:paddingLeft="5sp"
            android:paddingRight="5sp">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edtTransaction_editComment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Comment"
                android:inputType="textMultiLine"
                android:textSize="15sp"
                app:met_hideUnderline="true" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
