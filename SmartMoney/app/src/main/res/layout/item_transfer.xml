<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/logo_app"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginTop="15sp"
        android:layout_marginBottom="5sp"
        android:scaleType="fitCenter"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo_app"
        android:layout_margin="5sp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:paddingLeft="15sp"
            android:paddingRight="5sp"
            app:cardCornerRadius="5sp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3sp"
            android:paddingLeft="15sp"
            android:paddingRight="5sp">


            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edtTransaction_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Amount"
                android:inputType="numberDecimal"
                android:padding="2sp"
                android:textSize="16sp"
                app:met_hideUnderline="true" />

        </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:paddingLeft="5sp"
            android:paddingRight="5sp"
            app:cardCornerRadius="5sp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45sp"
            android:layout_margin="3sp"
            android:paddingLeft="5sp"
            android:paddingRight="5sp">


            <TextView
                android:id="@+id/tvTransaction_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2sp"
                android:hint="dd/mm/yyyy"
                android:inputType="date"
                android:textColor="#000000"
                android:textSize="16sp" />

        </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:padding="7sp"
            app:cardCornerRadius="5sp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3sp"
            android:orientation="horizontal"
            android:padding="7sp">




            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.7"
                android:paddingLeft="5sp"
                android:text="From Account"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/spinTransaction_fromAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.3" />

        </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:padding="7sp"
            app:cardCornerRadius="5sp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3sp"
            android:orientation="horizontal"
            android:padding="7sp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.7"
                android:paddingLeft="5sp"
                android:text="To Account"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/spinTransaction_toAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.3" />
        </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:paddingLeft="5sp"
            android:paddingRight="5dp"
            app:cardCornerRadius="5sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3sp"
            android:paddingLeft="5sp"
            android:paddingRight="5sp">



        <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edtTransaction_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Comment"
                android:inputType="textMultiLine"
                android:padding="2sp"
                android:textSize="16sp"
                app:met_hideUnderline="true" />

        </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <Button
        android:id="@+id/btnTransaction_done"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_sub"
        android:text="done"
        android:layout_marginBottom="80dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="#ffffff" />


</RelativeLayout>
