<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/logo_app"
        android:layout_margin="5sp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3sp"
            android:background="@drawable/background_linear"
            android:paddingLeft="15sp"
            android:paddingRight="5sp">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edtExpenses_editAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Amount"
                android:inputType="numberDecimal"
                android:textSize="16sp"
                app:met_hideUnderline="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_margin="3sp"
            android:background="@drawable/background_linear"
            android:paddingLeft="15sp"
            android:paddingRight="5sp">

            <TextView
                android:id="@+id/tvExpenses_editDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:hint="dd/mm/yyyy"
                android:inputType="date"
                android:textColor="#000000"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3sp"
            android:background="@drawable/background_linear"
            android:padding="5sp">

            <Spinner
                android:id="@+id/spinExpenses_editCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linExpense_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3sp"
            android:background="@drawable/background_linear"
            android:padding="7sp">

            <TextView
                android:id="@+id/tvExpenses_editAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9sp"
                android:textColor="#000000"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3sp"
            android:background="@drawable/background_linear"
            android:paddingLeft="15sp"
            android:paddingRight="5sp">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edtExpenses_editComment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Comment"
                android:inputType="textMultiLine"
                android:textSize="16sp"
                app:met_hideUnderline="true" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
